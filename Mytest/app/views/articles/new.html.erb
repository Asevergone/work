<h1>Please write your new article!</h1>

<%= form_for :article ,url: articles_create_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :body%><br>
    <%= f.text_area :body %>
  </p>
   <p>
    <%= f.label :abstract%><br>
    <%= f.text_area :abstract %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
           Errors! Please try again!     </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>